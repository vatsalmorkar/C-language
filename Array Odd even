#include <stdio.h>
void main(){
    int a[10],i,n,sum=0;
    printf("enter the number==> ");
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    for(i=0;i<n;i++)
    {
        printf("array[%d]=%d \n",i,a[i]);
       sum+= a[i];
    }
    printf("The sum of the number is %d",sum);
printf(" \nThe even numbers in the array are" );
for(i=0;i<n;i++)
if(a[i]%2==0){
        printf("\n%d",a[i]);    
}else{
    printf("\nThe odd numbers in the array are");
    for(i=0;i<n;i++)
if(a[i]%2!=0){
        printf("\n%d",a[i]);    
}
}

    }
    
     
